<h2><%= t(:label_edit_attendance)%></h2>

<%= form_for @time_checks do |attendance_form| %>
  <table>
    <tr>
      <th align="left"><%= t(:label_user)%></th>
      <td><strong><%= User.find(@time_checks.user_id).name %></strong></td>
    </tr>
    <tr>
      <th align="left"><%= t(:label_check_in_time)%></th>
      <% unless attendance_form.object.check_in_time.blank? %>
        <td><%= attendance_form.text_field :check_in_time,
            :value => attendance_form.object.check_in_time.to_s(:date_format) %></td>
      <% else %>
        <td><%= attendance_form.text_field :check_in_time %></td>
      <% end %>
    </tr>
    <tr>
      <th align="left"><%= t(:label_check_out_time)%></th>
      <% unless attendance_form.object.check_out_time.blank? %>
        <td><%= attendance_form.text_field :check_out_time,
            :value => attendance_form.object.check_out_time.to_s(:date_format) %></td>
      <% else %>
        <td><%= attendance_form.text_field :check_out_time %></td>
      <% end %>
    </tr>
  </table>
  <%= attendance_form.submit t(:label_button_update) %>
<% end %>
